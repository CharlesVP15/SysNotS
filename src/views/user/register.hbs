      <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
      <link rel="stylesheet" href="/sweetalert2/sweetalert2.min.css" type="text/css">
      <link rel="stylesheet" href="/css/estilo_g.css" type="text/css">
      <link rel="stylesheet" href="/css/letrasFormat.css" type="text/css">
      <link rel="stylesheet" href="/css/designButton.css" type="text/css">
      <style>
         input {
            opacity: 1;
         }
      </style>
   </head>

   <body>
      <img class="wave" src="/img/w.png">
      <img class="wave1" src="/img/Innova Tech'S.png">
      <img class="wave2" src="/img/SysNot'S2.png">
      <div class="container">
         <br>
         {{> messages}}
         {{> errors}}
         <br>

         <div class="row">
            <div class="col-md-10 mx-auto">
               <form class="was-validated" action="/register" method="post">
                  <div class="card border-success mb-3" style="opacity: 0.9;">
                     <div class="card-header bg-success text-white">
                        <b style="font-size: 20px;">&nbsp;&nbsp;REGISTRARSE</b>
                     </div>

                     <div class="card-body text-success">
                        <div class="form-row mb-3">
                           <img class="mx-auto" src="/img/avatar.svg" height="120px" width="120px">
                        </div>

                        <div class="form-row">
                           <div class="col-md-10">
                              <h5 class="h5">Datos Personales - Usuario</h5>
                           </div>
                        </div>

                        <div class="form-row">
                           <div class="col-md-3 mb-3">
                              <b><label># de Identificación :</label></b>
                              <input type="text" class="form-control" id="cedula" name="cedula" onkeypress="return numeros(event)" onkeyUp="return Cedula(this);" maxlength="10" value="{{cedula}}" required autofocus>
                           </div>

                           <div class="col-md-4 mb-3">
                              <b><label>Apellidos :</label></b>
                              <input type="text" class="form-control" id="apellidos" name="apellidos" onkeypress="return letra(event)" value="{{apellidos}}" required>
                           </div>

                           <div class="col-md-4 mb-3">
                              <b><label>Nombres :</label></b>
                              <input type="text" class="form-control" id="nombres" name="nombres" onkeypress="return letra(event)" value="{{nombres}}" required>
                           </div>
                           
                           <div class="col-md-1 mb-3">
                              <b><label>Edad :</label></b>
                              <input type="text" class="form-control" id="edad" name="edad" onkeypress="return numeros(event)" maxlength="3" pattern="[0-9]{1-3}" value="{{edad}}" required>
                           </div>
                        </div>

                        <div class="form-row">
                           <div class="col-md-3 mb-3">
                              <b><label>Sexo : </label></b> 
                              <select name="sexo" id="sexo" required class="custom-select">
                                 <option disabled selected value="">Seleccionar...</option>
                                 <option value="Masculino">Masculino</option>
                                 <option value="Femenino">Femenino</option>
                                 <option value="NDefinido">No definido</option>
                              </select>
                           </div>

                           <div class="col-md-4 mb-3">
                              <b><label>Correo :</label></b>
                              <input type="email" class="form-control" id="email" name="email" onkeypress="return emailD(event)" style="text-transform: lowercase;" value="{{email}}" required>
                           </div>
                        </div>

                        <div class="form-row">
                           <div class="col-md-10">
                              <h5 class="h5">Datos de Sesión</h5>
                           </div>
                        </div>

                        <div class="form-row">
                           <div class="col-md-4 mb-3">
                              <b><label>User :</label></b>
                              <input type="hidden" class="form-control" id="profile" name="profile" value="ui.svg">

                              <input type="text" class="form-control" id="user" name="user" minlength="7" maxlength="15" pattern="[a-zA-Z]{7-15}" onkeypress="return userU(event)" placeholder="Ej. Usuario Charl123" value="{{user}}" required>
                           </div>

                           <div class="col-md-4 mb-3">
                              <b><label>Password :</label></b>
                              <input type="password" class="form-control" id="password" name="password" minlength="8" placeholder="Minimo 6 caracteres" required>
                           </div>

                           <div class="col-md-4 mb-3">
                              <b><label>Confirm Password :</label></b>
                              <input type="password" class="form-control" id="conf_password" name="conf_password" minlength="8" placeholder="Confirmar Contraseña" required>
                           </div>
                        </div>
                        
                     </div>
                  </div>
                  
                  <button class="btn float-right col-md-4" id="Enviar" type="submit" disabled>
                     &nbsp;&nbsp;&nbsp;
                     <i class="fas fa-user-plus"></i>
                     &nbsp;&nbsp;
                     Registrarse...
                     &nbsp;&nbsp;&nbsp;
                  </button>
               </form>
            </div>
         </div>

		</div>
		
      <br><br>

      <script src="/js/jquery.min.js"></script>
      <script src="/js/bootstrap.min.js"></script>
      <script src="/sweetalert2/sweetalert2.min.js"></script>
      <script src="/css/fontawesome/js/all.min.js"></script>
